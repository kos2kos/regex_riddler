<h1><%= "Challenges!!!  "%></h1>
<h4><%= @challenge.name %></h4>
<%= form_tag "/result", method: :post, id: "play_form" do |f| %>
  <h4><%= @challenge.trial %></h4>
  <%= hidden_field_tag :id, "#{@challenge.id}" %>
  <p><%= "Description: Do The thing" %></p>


  <p>/<%= text_field_tag :regex, nil, placeholder: "enter regex here!" %>/</p>
  <div>Registration closes in <span name="time" id="time"></span> minutes!</div>
  <input type="hidden" name="time_left" id="time_left" value="45">
  <%= submit_tag "Submit" %>

<%end%>
