<%= form_for @challenge do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :trial %><br>
  <%= f.text_field :trial %><br>
  <%= f.label :solution %><br>
  <%= f.text_field :solution %><br>
  <%= f.submit %>

<%end%>
