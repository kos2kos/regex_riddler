<%= form_for @challenge do |f| %>
  <%= f.hidden_field :user_id, value: session[:user_id] %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :trial %><br>
  <%= f.text_field :trial %><br>
  <%= f.label :description %><br>
  <%= f.text_field :description %><br>
  <%= f.label :solution %><br>
  <%= f.text_field :solution %><br>
  <%= f.label :regex %><br>
  <%= f.text_field :regex %><br>
  <%= f.submit %>
<%end%>
